                { id: 81, text: 'Cambridge University Press. "Transhumanism and Transcendence." *Cambridge Companion to Religion and AI*.', url: 'https://www.cambridge.org/core/books/cambridge-companion-to-religion-and-artificial-intelligence/transhumanism-and-transcendence/84E57D7C1DD10C669B12D0F1553AA7D7' },
            ];

            // Merge and de-duplicate sources, prioritizing those with URLs
            const allSourcesMap = new Map();
            interactiveBibliography.forEach(source => allSourcesMap.set(source.id, source));
            combinedSourcesList.forEach(source => {
                if (!allSourcesMap.has(source.id)) {
                    allSourcesMap.set(source.id, source);
                }
            });

            const finalSources = Array.from(allSourcesMap.values()).sort((a, b) => a.id - b.id);

            // --- General Page Functionality ---
            // Mobile Menu
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');
            mobileMenuButton.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });

            // Accordions (unified logic from ASCENSION P2.txt and ASC P3 CHIMERA.txt)
            const accordions = document.querySelectorAll('.accordion-button');
            accordions.forEach(button => {
                button.addEventListener('click', () => {
                    const content = button.nextElementSibling;
                    const icon = button.querySelector('.accordion-icon');
                    
                    button.classList.toggle('open');
                    icon.classList.toggle('rotate-180');

                    if (content.style.maxHeight) {
                        content.style.maxHeight = null;
                        content.style.paddingTop = null; /* from P2 */
                        content.style.paddingBottom = null; /* from P2 */
                    } else {
                        content.style.maxHeight = content.scrollHeight + "px";
                        content.style.paddingTop = '1.5rem'; /* from P2 */
                        content.style.paddingBottom = '1.5rem'; /* from P2 */
                    }
                });
            });
            
            // Nav link highlighting on scroll (unified logic)
            const sections = document.querySelectorAll('main section');
            const navLinks = document.querySelectorAll('.nav-link');

            window.addEventListener('scroll', () => {
                let current = '';
                sections.forEach(section => {
                    // Skip sections that are part of the interactive view and are hidden
                    if (section.closest('#app-content-interactive') && section.classList.contains('hidden')) {
                        return;
                    }

                    const sectionTop = section.offsetTop;
                    // Adjust offset for sticky header
                    const offset = 100; // Height of header + some buffer
                    if (pageYOffset >= sectionTop - offset) {
                        current = section.getAttribute('id');
                    }
                });

                navLinks.forEach(link => {
                    link.classList.remove('active');
                    if (link.getAttribute('href').substring(1) === current) {
                        link.classList.add('active');
                    }
                });
            });

            // Populate combined sources
            function populateCombinedSources() {
                const sourcesContainer = document.querySelector('#combined-sources .content-card');
                sourcesContainer.innerHTML = ''; // Clear existing content
                const list = document.createElement('ul');
                finalSources.forEach(source => {
                    const item = document.createElement('li');
                    if (source.url) {
                        item.innerHTML = `[${source.id}] ${source.text} <a href="${source.url}" target="_blank" rel="noopener noreferrer" class="text-secondary-accent hover:text-secondary-text">[Link]</a>`;
                    } else {
                        item.textContent = `[${source.id}] ${source.text}`;
                    }
                    list.appendChild(item);
                });
                sourcesContainer.appendChild(list);
            }

            // Populate interactive sources (for the specific section)
            function populateInteractiveSources() {
                const sourcesContainer = document.querySelector('#sources-analysis-view .content-card');
                sourcesContainer.innerHTML = ''; // Clear existing content
                const list = document.createElement('ul');
                // Use only interactiveBibliography for this section
                interactiveBibliography.forEach(source => {
                    const item = document.createElement('li');
                    item.innerHTML = `[${source.id}] ${source.text} <a href="${source.url}" target="_blank" rel="noopener noreferrer" class="text-secondary-accent hover:text-secondary-text">[Link]</a>`;
                    list.appendChild(item);
                });
                sourcesContainer.appendChild(list);
            }


            // --- Initialize Interactive Analysis Section ---
            subNavTimeline.addEventListener('click', () => showInteractiveView('timeline-explorer-view'));
            subNavComparison.addEventListener('click', () => showInteractiveView('comparative-framework-view'));
            subNavDefinitions.addEventListener('click', () => showInteractiveView('defining-divinity-view'));
            subNavSources.addEventListener('click', () => showInteractiveView('sources-analysis-view'));
            
            filterControls.addEventListener('click', (e) => {
                if (e.target.tagName === 'BUTTON') {
                    filterCards(e.target.dataset.filter);
                }
            });

            // Initial setup for the entire page
            populateCombinedSources(); // Populate the main combined sources section
            populateInteractiveSources(); // Populate the interactive sources section
            createTimeline(); // Initialize Chart.js timeline
            createComparisonCards(); // Create cards for comparison grid
            showDeepDive('sumerian'); // Show initial deep dive content
            showInteractiveView('timeline-explorer-view'); // Set initial interactive view


            // Ensure accordions that are meant to be open on load are open
            document.querySelectorAll('.accordion-button.open').forEach(button => {
                const content = button.nextElementSibling;
                content.style.maxHeight = content.scrollHeight + "px";
                content.style.paddingTop = '1.5rem';
                content.style.paddingBottom = '1.5rem';
            });
        });
    </script>
</body>
</html>

