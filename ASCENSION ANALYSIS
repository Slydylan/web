            ];

            const list = document.createElement('ul');
            bibliography.forEach(source => {
                const item = document.createElement('li');
                item.innerHTML = `[${source.id}] ${source.text} <a href="${source.url}" target="_blank" rel="noopener noreferrer">[Link]</a>`;
                list.appendChild(item);
            });
            sourcesContainer.appendChild(list);
        }

        navTimeline.addEventListener('click', () => showView('timeline-view'));
        navComparison.addEventListener('click', () => showView('comparison-view'));
        navDefinitions.addEventListener('click', () => showView('definitions-view'));
        navSources.addEventListener('click', () => showView('sources-view'));
        
        filterControls.addEventListener('click', (e) => {
            if (e.target.tagName === 'BUTTON') {
                filterCards(e.target.dataset.filter);
            }
        });

        window.onload = () => {
            createTimeline();
            createComparisonCards();
            populateSources();
            showDeepDive('sumerian');
            showView('timeline-view');
        };

