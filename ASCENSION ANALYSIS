                { id: 66, text: 'SparkNotes. "The Aeneid: Themes." *SparkNotes*.', url: 'https://www.sparknotes.com/lit/aeneid/themes/' },
                { id: 67, text: 'Wikipedia contributors. "Metamorphoses." *Wikipedia*.', url: 'https://en.wikipedia.org/wiki/Metamorphoses' },
                { id: 68, text: 'Hardie, Philip. "Ovid and the Immortality of the Poet." *Brill*.', url: 'https://brill.com/display/book/9789004528871/BP000019.xml' },
                { id: 69, text: 'CAMWS. "Ovid\'s Apotheosis of Julius Caesar." *CAMWS*.', url: 'https://camws.org/meeting/2008/program/abstracts/10a5.Hornbeck.html' },
                { id: 71, text: 'Wikipedia contributors. "Paradiso (Dante)." *Wikipedia*.', url: 'https://en.wikipedia.org/wiki/Paradiso_(Dante)' },
                { id: 74, text: 'O\'Regan, Cyril. "Heaven Knowing: Dante\'s Paradiso." *The Imaginative Conservative*.', url: 'https://theimaginativeconservative.org/2014/08/heaven-knowing-dantes-paradiso.html' },
                { id: 78, text: 'Kornu, Kimbell. "The Case of Transhumanism and Deification." *MDPI Religions*.', url: 'https://www.mdpi.com/2077-1444/15/8/904' },
